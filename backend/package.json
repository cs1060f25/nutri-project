{
  "name": "nutri-project-backend",
  "version": "1.0.0",
  "description": "Backend API for HUDS Nutrition Analyzer with Firebase Authentication",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "setup": "node setup-firebase.js",
    "check": "node quick-test.js",
    "test": "jest",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:unit:functionality": "jest scanner.test.js insights.test.js nutritionPlanner.test.js social.test.js mealPlanning.test.js",
    "test:integration": "jest integration.mealLogging.test.js integration.scannerToPost.test.js",
    "test:all": "jest scanner.test.js insights.test.js nutritionPlanner.test.js social.test.js mealPlanning.test.js integration.mealLogging.test.js integration.scannerToPost.test.js",
    "test:huds": "jest --testPathPattern=huds",
    "test:meal-planning": "jest --testPathPattern=mealPlanningData",
    "test:syntax": "node tests/test-syntax.js",
    "test:auth": "bash tests/test-full-auth.sh",
    "test:api": "bash tests/test-endpoints.sh",
    "list-users": "node scripts/listUsers.js",
    "set-role": "node scripts/setUserRole.js",
    "delete-user": "node scripts/deleteUser.js",
    "get-breakfast-nutrition": "node scripts/getBreakfastNutrition.js",
    "inspect-api-fields": "node scripts/inspectApiFields.js"
  },
  "keywords": [
    "auth",
    "firebase",
    "express",
    "nutrition"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  }
}
