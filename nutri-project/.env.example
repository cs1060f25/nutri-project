# .env.example

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database
DB_NAME=huds_nutrition
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Media Files
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/huds/media/

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/var/www/huds/static/

# Security
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
