{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "rewrites": [
    { "source": "/home", "destination": "/api/home" },
    { "source": "/auth/:path", "destination": "/api/auth" },
    { "source": "/api/nutrition-plan", "destination": "/api/nutrition-plan/index" },
    { "source": "/api/huds/locations", "destination": "/api/huds/locations" },
    { "source": "/api/huds/menu/today", "destination": "/api/huds/menu-today" },
    { "source": "/test-env", "destination": "/api/test-env" }
  ]
}
