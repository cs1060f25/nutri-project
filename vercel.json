{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "rewrites": [
    { "source": "/home", "destination": "/api/home" },
    { "source": "/auth/register", "destination": "/api/auth/register" },
    { "source": "/auth/login", "destination": "/api/auth/login" },
    { "source": "/auth/me", "destination": "/api/auth/me" },
    { "source": "/auth/refresh", "destination": "/api/auth/refresh" },
    { "source": "/auth/logout", "destination": "/api/auth/logout" },
    { "source": "/api/nutrition-plan", "destination": "/api/nutrition-plan/get" },
    { "source": "/test-env", "destination": "/api/test-env" }
  ],
  "routes": [
    { "src": "/api/nutrition-plan", "methods": ["POST"], "dest": "/api/nutrition-plan/create" },
    { "src": "/api/nutrition-plan", "methods": ["GET"], "dest": "/api/nutrition-plan/get" }
  ]
}
